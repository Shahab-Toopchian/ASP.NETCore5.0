@model InAndOut.Models.Item

    <form asp-action="Create" method="post">
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Add Item</h2>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ItemName"></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="Borrower"></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="Lender"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <input class="form-control" asp-for="ItemName" />
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="Borrower" />
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="Lender" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 text-center row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Create" />
                            </div>
                            <div class="col">
                                <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </form>